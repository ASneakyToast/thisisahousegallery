# Local Development Environment Variables
# Copy this to .env and update the values as needed

# Database Configuration
# Set to "false" to use local Postgres container (default)
# Set to "true" to connect to Google Cloud SQL via proxy
USE_CLOUD_DB=false

# Cloud SQL Configuration (only needed if USE_CLOUD_DB=true)
# DATABASE_URL=postgres://user:password@housegallery-sql-proxy:5432/database_name

# Local Environment Type (for build type naming)
LOCAL_ENV=local

# Django Secret Key (for local development only)
DJANGO_SECRET_KEY=your-local-secret-key-here