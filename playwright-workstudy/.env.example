# Wagtail CMS Base URLs
WAGTAIL_BASE_URL=http://localhost:8000
WAGTAIL_ADMIN_URL=/admin/

# Authentication Credentials
WAGTAIL_USER=admin
WAGTAIL_PASS=password

# Environment Configuration
NODE_ENV=development

# Development Mode Selection
# Options: local-offline, local-cloud, production
DEV_MODE=local-offline

# Docker Compose Configuration
# For local-offline mode
COMPOSE_FILE_OFFLINE=../compose/compose.local-offline.yml
# For local-cloud mode  
COMPOSE_FILE_CLOUD=../compose/compose.local-cloud.yml

# Batch Processing Configuration
DEFAULT_BATCH_SIZE=20
MAX_RETRIES=3
RETRY_DELAY=2000

# Logging Configuration
LOG_LEVEL=info
ENABLE_PROGRESS_TRACKING=true

# Browser Configuration
HEADLESS=true
SLOW_MO=0
BROWSER_TIMEOUT=30000